[PerlTidy]
select = {lib,t,tools}/**/*.{pl,pm,t,psgi}
select = Makefile.PL
select = bin/app.psgi
select = cpanfile
ignore = t/var/**/*
ignore = .gitignore
ignore = cpanfile
argv = --profile=$ROOT/.perltidyrc

[PerlCritic]
select = {lib,t}/**/*.{pl,pm,t,psgi}
ignore = t/var/**/*

[SortLines]
select = .gitignore

[UniqueLines]
select = .gitignore
